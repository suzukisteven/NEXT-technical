<div id="filterrific_results" class="mt-5">

  <div class="jumbotron">
    <%= page_entries_info houses %>
  </div>

  <table class="table">
    <tr>
      <th><%= filterrific_sorting_link(@filterrific, :name) %></th>
      <th><%= filterrific_sorting_link(@filterrific, :address) %></th>
      <th><%= filterrific_sorting_link(@filterrific, :rented) %></th>
    </tr>
    <% houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.address %></td>
        <td><%= house.rented %></td>
      </tr>
    <% end %>
  </table>

</div>

<%= will_paginate houses %>
