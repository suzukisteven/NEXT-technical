<div class="container d-flex justify-content-between">
  <h1 class="mt-3"><i class="fab fa-phoenix-squadron mr-3 text-danger"></i>Property Search</h1>
  <a href="/" class="text-dark pt-3 mt-3" style="text-decoration: none;"><em>"Find your ideal home fast" Â®</em></p>
</div>
<hr class="my-4">

<%= form_for_filterrific @filterrific do |f| %>

  <div>
    Search
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed form-control mb-3',
      placeholder: 'Enter Name or Address...'
    ) %>
  </div>

  <div>
    Address
    <%= f.select(
      :with_address,
      @filterrific.select_options[:with_address],
      { include_blank: '- Any -' },
      class: 'form-control mb-3'
    ) %>
  </div>

  <div>
    Rental Status
    <%= f.select(
      :with_rented,
      @filterrific.select_options[:with_rented],
      { include_blank: '- Any -' },
      class: 'form-control mb-3'
    ) %>
  </div>

  <div>
    Sort results by:
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
  </div>

  <div>
    <%= link_to(
      'Reset All Filters',
      reset_filterrific_url,
      class: 'btn btn-primary mt-3'
    ) %>
  </div>

  <%= render_filterrific_spinner %>
<% end %>

<%= render(
  partial: 'search/list',
  locals: { houses: @houses }
) %>

<%= will_paginate(@houses, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
